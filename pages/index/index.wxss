/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg{
    width: 100%;
    height: 620rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 4rpx;
}

.box_up{
    width: 90%;
    /* background-color: coral; */
    text-align: center;
    margin: 5rpx;
}

.box_up_one{
    display: inline-block;
}

.box_up_two{
    display: inline-block;
    float: right;
    cursor: pointer;
}
.box_main{
    width: 90%;
    height: 400rpx;
    background-color: aqua;
    padding: 2rpx;
}
/*隐藏滚动条  */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
